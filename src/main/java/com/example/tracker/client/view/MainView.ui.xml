<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:HorizontalPanel width="100%">
            <g:HorizontalPanel ui:field="menuPanel" verticalAlignment="ALIGN_TOP">
                <g:Button ui:field="homeButton" text="Home"/>
                <g:Button ui:field="expensesButton" text="Expenses"/>
                <g:Button ui:field="profileButton" text="Profile"/>
                <g:Button ui:field="calendarButton" text="Calendar"/>
            </g:HorizontalPanel>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:HTMLPanel ui:field="profileBarPanel"/>
            </g:cell>
        </g:HorizontalPanel>
        <g:HorizontalPanel ui:field="contentPanel"/>
    </g:HTMLPanel>
</ui:UiBinder>