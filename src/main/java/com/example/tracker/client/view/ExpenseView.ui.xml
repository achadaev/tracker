<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
<g:HTMLPanel>
        <g:HorizontalPanel width="200px">
            <g:Button ui:field="addButton" text="Add"/>
            <g:Button ui:field="editButton" text="Edit"/>
            <g:Button ui:field="deleteButton" text="Delete"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel width="700px">
            <g:ListBox ui:field="typesListBox" height="25px"/>
            <g:Label text="Filter by date" horizontalAlignment="LEFT"/>
            <g:CheckBox ui:field="dateCheckBox"/>
            <dp:DatePicker ui:field="startDate"/>
            <dp:DatePicker ui:field="endDate"/>
            <g:Button ui:field="filter" text="Filter"/>
        </g:HorizontalPanel>

        <g:HTMLPanel ui:field="tablePanel"/>
            <g:HorizontalPanel>
                <g:Label text="Total: "/>
                <g:Label ui:field="total"/>
            </g:HorizontalPanel>
        </g:HTMLPanel>

</ui:UiBinder>