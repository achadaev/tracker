<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>
    <g:HTMLPanel>
        <b:Jumbotron height="25em">
            <b:Heading size="H1" ui:field="greetingHeading"/>
            <b:html.Hr/>
            <b:Heading size="H5" ui:field="amountLabel" text="Total expenses: "/>
            <b:Heading size="H5" ui:field="monthLabel" text="This month expenses: "/>
            <b:Heading size="H5" ui:field="weekLabel" text="This week expenses: "/>
            <b:Anchor ui:field="moreAnchor" text="Show more..."/>
        </b:Jumbotron>

        <g:Label text="Expenses"/>
        <g:HorizontalPanel ui:field="expenseChartPanel"/>
        <g:Label text="Incomes"/>
        <g:HorizontalPanel ui:field="incomeChartPanel"/>
    </g:HTMLPanel>
</ui:UiBinder>