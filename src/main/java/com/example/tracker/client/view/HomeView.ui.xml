<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:Label ui:field="greetingLabel"/>
        <g:HTMLPanel ui:field="reviewPanel">
            <g:Label ui:field="amountLabel" text="Total expenses: "/>
            <g:Label ui:field="monthLabel" text="This month expenses: "/>
            <g:Label ui:field="weekLabel" text="This week expenses: "/>
        </g:HTMLPanel>
        <g:Label ui:field="moreLabel" text="Show more..." addStyleNames="moreLabel"/>
    </g:HTMLPanel>
</ui:UiBinder>